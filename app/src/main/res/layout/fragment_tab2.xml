<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tab2_framelayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.Tab1Fragment">

    <LinearLayout
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:weightSum="4.0"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/kids_button_tab2"
                style="@style/MainTab1Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/kids"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="59dp"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:elevation="2dp"
                android:foregroundGravity="top"
                android:scaleType="center"
                android:src="@drawable/ic_more_horiz_24dp"
                android:visibility="visible"

                app:layout_constraintBottom_toBottomOf="@+id/kids_button_tab2"
                app:layout_constraintEnd_toEndOf="@id/kids_button_tab2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/kids_button_tab2"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent=".7"
                tools:srcCompat="@drawable/ic_more_horiz_24dp"
                android:contentDescription="TODO" />


        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/pets_button_tab2"

            style="@style/MainTab1Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/pets" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="59dp"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:elevation="2dp"
                android:foregroundGravity="top"
                android:scaleType="center"
                android:src="@drawable/ic_more_horiz_24dp"
                android:visibility="visible"

                app:layout_constraintBottom_toBottomOf="@+id/pets_button_tab2"
                app:layout_constraintEnd_toEndOf="@id/pets_button_tab2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pets_button_tab2"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent=".7"
                tools:srcCompat="@drawable/ic_more_horiz_24dp"
                android:contentDescription="TODO" />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/nature_button_tab2"

                style="@style/MainTab1Button"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:text="@string/nature"
                app:layout_constraintTop_toTopOf="parent" />
            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="59dp"
                android:layout_height="23dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"
                android:elevation="2dp"
                android:foregroundGravity="top"
                android:scaleType="center"
                android:src="@drawable/ic_more_horiz_24dp"
                android:visibility="visible"

                app:layout_constraintEnd_toEndOf="@id/nature_button_tab2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nature_button_tab2"
                app:layout_constraintWidth_percent=".7"
                tools:srcCompat="@drawable/ic_more_horiz_24dp" />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/love_button_tab2"

                style="@style/MainTab1Button"

                android:layout_height="match_parent"
                android:text="@string/love"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="59dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            android:foregroundGravity="top"
            android:scaleType="center"
            android:src="@drawable/ic_more_horiz_24dp"
            android:visibility="visible"

            app:layout_constraintBottom_toBottomOf="@+id/love_button_tab2"
            app:layout_constraintEnd_toEndOf="@id/love_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/love_button_tab2"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintWidth_percent=".7"
            tools:srcCompat="@drawable/ic_more_horiz_24dp" />

    </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            app:layout_dodgeInsetEdges="bottom"
            android:src="@drawable/ic_add_a_photo_24dp" />
    </LinearLayout>
</FrameLayout>